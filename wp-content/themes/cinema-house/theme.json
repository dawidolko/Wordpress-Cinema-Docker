                                "file:./assets/fonts/Poppins/Poppins-ExtraBold.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Poppins",
                            "fontWeight": "900",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/Poppins/Poppins-Black.ttf"
                            ]
                        }
                    ]
                },
                {
                    "fontFamily": "\"Josefin Sans\", sans-serif",
                    "name": "Josefin Sans",
                    "slug": "josefin-sans",
                    "fontFace": [
                        {
                            "fontFamily": "Josefin Sans",
                            "fontWeight": "100",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/Josefin_Sans/static/JosefinSans-Thin.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Josefin Sans",
                            "fontWeight": "200",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/Josefin_Sans/static/JosefinSans-ExtraLight.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Josefin Sans",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/Josefin_Sans/static/JosefinSans-Light.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Josefin Sans",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/Josefin_Sans/static/JosefinSans-Regular.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Josefin Sans",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "fontStretch": "",
                            "src": [
                                "file:./assets/fonts/Josefin_Sans/static/JosefinSans-Medium.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Josefin Sans",
                            "fontWeight": "600",
                            "fontStyle": "normal",
